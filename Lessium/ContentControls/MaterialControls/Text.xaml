<UserControl x:Class="Lessium.ContentControls.MaterialControls.Text"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lessium.ContentControls.MaterialControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <TextBox x:Name="textBox"
             TextWrapping="Wrap" Background="Transparent"
             HorizontalAlignment="Stretch" AcceptsReturn="True"
             KeyDown="TextBox_KeyDown">
    </TextBox>
</UserControl>
