<UserControl x:Class="Lessium.CustomControls.PageItemsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lessium.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <ItemsControl x:Name="innerItemsControl" 
                  ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=local:PageItemsControl}}" 
                  ItemTemplate="{Binding ItemTemplate, RelativeSource={RelativeSource AncestorType=local:PageItemsControl}}" 
                  MaxHeight="{Binding MaxHeight, RelativeSource={RelativeSource AncestorType=local:PageItemsControl}}"
                  MaxWidth="{Binding MaxWidth, RelativeSource={RelativeSource AncestorType=local:PageItemsControl}}"
                  SizeChanged="innerItemsControl_SizeChanged" />
    
</UserControl>
