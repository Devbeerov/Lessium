<UserControl x:Class="Lessium.CustomControls.TitledProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lessium.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150"
             x:Name="control">
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="{Binding Title, ElementName=control, UpdateSourceTrigger=PropertyChanged}" />
        <Grid>
            <ProgressBar Minimum="{Binding ProgressMinimum, ElementName=control, UpdateSourceTrigger=PropertyChanged}" 
                         Maximum="{Binding ProgressMaximum, ElementName=control, UpdateSourceTrigger=PropertyChanged}"
                         Value="{Binding ProgressValue, ElementName=control, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Text="{Binding ProgressText, ElementName=control, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </StackPanel>
</UserControl>
